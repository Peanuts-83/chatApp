    "version": "0.2.0",
    "configurations": [
        {
            "name": "BackEnd debug conf",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/back_chat_app",
            "args": [
                "main:app",
                "--reload"
            ],
            // "jinja": true
        },
        {
            "name": "Frontend debug conf",
            "type": "debugpy",
            "module": "main",
            "request": "launch",
            "cwd": "${workspaceFolder}/front_chat_app",
            "args": [
                "main.py",
                // "--reload"
            ],
            // "jinja": true
        }
    ]
}